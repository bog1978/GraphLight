<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:drawing="clr-namespace:GraphLight.Drawing"
    xmlns:converters="clr-namespace:GraphLight.Converters"
    xmlns:graph="clr-namespace:GraphLight.Graph;assembly=GraphLight.Core">

    <converters:PointsToQuadraticBezierConverter x:Key="BezierConverter" />
    <converters:ShapeToGeometryConverter x:Key="ShapeConverter"/>

    <Style TargetType="drawing:VertexControl">
        <Setter Property="Panel.ZIndex" Value="{Binding RelativeSource={RelativeSource Self}, Path=Data.ZIndex, FallbackValue=0}" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type graph:IVertexData}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding Label}">
                    </TextBlock>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="drawing:VertexControl">
                    <Grid>
                        <Path
                            Fill="LightBlue"
                            Stretch="Fill"
                            Stroke="Black">
                            <Path.Data>
                                <Binding
                                    RelativeSource="{RelativeSource TemplatedParent}"
                                    Path="Data.Shape"
                                    Converter="{StaticResource ShapeConverter}"
                                    FallbackValue="{x:Null}" />
                            </Path.Data>
                        </Path>
                        <ContentPresenter
                            Margin="10"
                            Content="{TemplateBinding Data}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="drawing:EdgeControl">
        <Setter Property="Panel.ZIndex" Value="{Binding RelativeSource={RelativeSource Self}, Path=Data.ZIndex, FallbackValue=0}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type drawing:EdgeControl}">
                    <Grid Background="{x:Null}">
                        <Path>
                            <Path.StrokeThickness>
                                <Binding
                                    RelativeSource="{RelativeSource TemplatedParent}"
                                    Path="Data.Thickness"
                                    FallbackValue="1" />
                            </Path.StrokeThickness>
                            <Path.Data>
                                <Binding
                                    RelativeSource="{RelativeSource TemplatedParent}"
                                    Path="Data.Points"
                                    FallbackValue="{x:Null}"
                                    Converter="{StaticResource BezierConverter}" />
                            </Path.Data>
                            <Path.Stroke>
                                <SolidColorBrush>
                                    <SolidColorBrush.Color>
                                        <Binding
                                            RelativeSource="{RelativeSource TemplatedParent}"
                                            Path="Data.Color"
                                            FallbackValue="{x:Static Colors.Black}" />
                                    </SolidColorBrush.Color>
                                </SolidColorBrush>
                            </Path.Stroke>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="drawing:GraphControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="drawing:GraphControl">
                    <Grid x:Name="LayoutRoot" Background="Transparent">
                        <ScrollViewer
                            x:Name="scrollViewer"
                            Background="{x:Null}"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto">
                            <Grid
                                x:Name="mainGrid"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                                <drawing:GraphPanel
                                    x:Name="graphPanel"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Graph="{TemplateBinding Graph}"/>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
