<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:GraphLight.Converters"
    xmlns:drawing="clr-namespace:GraphLight.Drawing"
    xmlns:graph="clr-namespace:GraphLight.Graph;assembly=GraphLight.Core">

    <converters:PointsToQuadraticBezierConverter x:Key="BezierConverter" />
    <converters:ShapeToGeometryConverter x:Key="ShapeConverter" />

    <Style TargetType="drawing:VertexControl">
        <Setter Property="Panel.ZIndex" Value="{Binding RelativeSource={RelativeSource Self}, Path=Data.ZIndex, FallbackValue=0}" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type graph:IVertexData}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding Label}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="drawing:VertexControl">
                    <Grid>
                        <Path
                            Fill="LightBlue"
                            Stretch="Fill"
                            Stroke="Black">
                            <Path.Data>
                                <Binding
                                    Converter="{StaticResource ShapeConverter}"
                                    FallbackValue="{x:Null}"
                                    Path="Data.Shape"
                                    RelativeSource="{RelativeSource TemplatedParent}" />
                            </Path.Data>
                        </Path>
                        <ContentPresenter
                            Margin="10"
                            Content="{TemplateBinding Data}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="drawing:EdgeControl">
        <Setter Property="Panel.ZIndex" Value="{Binding RelativeSource={RelativeSource Self}, Path=Data.ZIndex, FallbackValue=0}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type drawing:EdgeControl}">
                    <Grid Background="{x:Null}">
                        <Path>
                            <Path.StrokeThickness>
                                <Binding
                                    FallbackValue="1"
                                    Path="Data.Thickness"
                                    RelativeSource="{RelativeSource TemplatedParent}" />
                            </Path.StrokeThickness>
                            <Path.Data>
                                <Binding
                                    Converter="{StaticResource BezierConverter}"
                                    FallbackValue="{x:Null}"
                                    Path="Data.Points"
                                    RelativeSource="{RelativeSource TemplatedParent}" />
                            </Path.Data>
                            <Path.Stroke>
                                <SolidColorBrush>
                                    <SolidColorBrush.Color>
                                        <Binding
                                            FallbackValue="{x:Static Colors.Black}"
                                            Path="Data.Color"
                                            RelativeSource="{RelativeSource TemplatedParent}" />
                                    </SolidColorBrush.Color>
                                </SolidColorBrush>
                            </Path.Stroke>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="drawing:GraphControl">
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="drawing:GraphControl">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <drawing:GraphPanel
                                x:Name="graphPanel"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Graph="{TemplateBinding Graph}" />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
