<Window x:Class="SplitPolygon.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="1024" Width="1280" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Canvas Background="LightSeaGreen" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
            <Polygon x:Name="polygon" Stroke="Black" StrokeThickness="1"/>
            <Path x:Name="convexPoints" Stroke="Green" StrokeThickness="1"/>
            <Path x:Name="concavePoints" Stroke="Red" StrokeThickness="1"/>
            <Path x:Name="splitLines" Stroke="Blue" StrokeThickness="1"/>
            <Path x:Name="pathLines" Stroke="Green" StrokeThickness="1"/>
            <Polyline x:Name="shortestPathLines" Stroke="LightYellow" Opacity="0.2" StrokeThickness="8"/>
            <Polyline x:Name="shortestPathLines2" Stroke="Black" Opacity="0.5" StrokeThickness="2"/>
