            <Button x:Name="btnClear" Margin="5" Content="Clear" Click="btnClear_Click"/>
            <Button x:Name="btnSimplify" Margin="5" Content="Simplify" Click="btnSimplify_Click"/>
            <Button x:Name="btnSplit" Margin="5" Content="Split" Click="btnSplit_Click"/>
            <Button x:Name="btnConvexLines" Margin="5" Content="Convex Lines" Click="btnConvexLines_Click" />
