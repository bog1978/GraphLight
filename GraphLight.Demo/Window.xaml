<Window
    x:Class="GraphLight.Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:drawing="clr-namespace:GraphLight.Drawing;assembly=GraphLight"
    xmlns:graphlight="clr-namespace:GraphLight"
    Title="GraphLight demo."
    WindowState="Maximized">
    <Window.DataContext>
        <graphlight:DemoViewModel />
    </Window.DataContext>
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Expander Grid.Column="0" ExpandDirection="Left">
            <Expander.Header>
                <TextBlock Text="Примеры графов">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
            <ListBox ItemsSource="{Binding ExampleCollection}" SelectedItem="{Binding SelectedExample, Mode=TwoWay}" />
        </Expander>
        <drawing:GraphControl
            Grid.Column="1"
            Graph="{Binding Graph, Mode=TwoWay}"
            VertexTemplateDictionary="{StaticResource vertexTemplateDictionary}" />
    </Grid>
</Window>
